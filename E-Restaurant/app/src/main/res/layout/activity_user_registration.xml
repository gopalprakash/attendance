<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.e_restaurant.user_registration">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTRATION"
        android:textStyle="bold"
        android:textSize="25dp"
        android:id="@+id/lblReg"
        android:textColor="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/llOne"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lblReg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="56dp">

<TextView
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:text="Name "/>
<EditText
    android:layout_width="246dp"
    android:hint="Name"
    android:layout_height="wrap_content"
    android:id="@+id/txtName"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/llTwo"
        android:layout_below="@+id/llOne">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Mobile "/>
        <EditText
            android:layout_width="246dp"
            android:hint="Mobile Number"
            android:layout_height="wrap_content"
            android:id="@+id/txtMobile"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/llThree"
        android:layout_below="@+id/llTwo">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="E-mail "/>
        <EditText
            android:layout_width="246dp"
            android:hint="E-mail"
            android:layout_height="wrap_content"
            android:id="@+id/txtEmail"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN DETAILS"
        android:textColor="@android:color/holo_green_dark"
        android:id="@+id/lblLogin"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/llFour"
        android:layout_below="@+id/lblLogin">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Username "/>
        <EditText
            android:layout_width="246dp"
            android:hint="Username"
            android:layout_height="wrap_content"
            android:id="@+id/txtUsername"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/llFive"
        android:layout_below="@+id/llFour">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Password "/>
        <EditText
            android:layout_width="246dp"
            android:inputType="textPassword"
            android:hint="password"
            android:layout_height="wrap_content"
            android:id="@+id/txtPassword"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/llSix"
        android:layout_below="@+id/llFive">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Confirm Password "/>
        <EditText
            android:layout_width="246dp"
            android:inputType="textPassword"
            android:hint="Re-type password"
            android:layout_height="wrap_content"
            android:id="@+id/txtCPassword"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:id="@+id/llSeven"
        android:layout_below="@+id/llSix">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSubmit"
            android:text="Submit"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnReset"

            android:text="Reset"/>
        </LinearLayout>


</RelativeLayout>
